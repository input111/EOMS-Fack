<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EOMS2.shezhi"
             Title="设置">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label 
                Text="发件邮箱"
                FontSize="16"/>
            <Entry 
                x:Name="SenderEmailEntry"
                Placeholder="请输入发件邮箱"/>

            <Label 
                Text="邮箱授权码"
                FontSize="16"/>
            <Entry 
                x:Name="PasswordEntry"
                Placeholder="请输入邮箱授权码"
                IsPassword="True"/>

            <Label 
                Text="收件邮箱"
                FontSize="16"/>
            <Entry 
                x:Name="RecipientEmailEntry"
                Placeholder="请输入收件邮箱"/>

            <Label 
                Text="抄送邮箱"
                FontSize="16"/>
            <Entry 
                x:Name="CcEmailEntry"
                Placeholder="请输入抄送邮箱"/>

            <Button 
                x:Name="SaveButton"
                Text="保存设置"
                Clicked="OnSaveClicked"
                Margin="0,20,0,0"/>
            <Label
                Text="禹州支撑服务中心-CV工程师制作"
                HorizontalOptions="Center"
                TextColor="Gray"
                Margin="0,0,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>